@using InteliWeb2.Models.ViewModels
@model ContratacionesViewModel

<a asp-controller="Sesion" asp-action="Close" class="btn btn-flotante btn-sm bg-success">Cerrar Sesion</a>

<div class="form">
    <form asp-action="Update" asp-route-r="@ViewBag.r" asp-route-i="@ViewBag.i">
        <div class="modal-dialog mb-3 mt-3">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Actualizar Contratacion</h2>
                </div>
                <div class="container table-responsive">
                    <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating form-group mb-3 mt-3">
                        <input asp-for="IdCont" class="form-control" hidden/>
                        <label asp-for="IdCont" class="control-label"></label>
                        <span asp-validation-for="IdCont" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-group mb-3 mt-3">
                        <select asp-for="idUser" class="form-control" asp-items="ViewBag.Usuario"></select>
                        <label asp-for="idUser" class="control-label"></label>
                        <span asp-validation-for="idUser" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-group mb-3 mt-3">
                        <select asp-for="idServ" class="form-control" asp-items="ViewBag.Servicio"></select>
                        <label asp-for="idServ" class="control-label"></label>
                        <span asp-validation-for="idServ" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-group mb-3 mt-3">
                        <input asp-for="FecIniCont" type="date" class="form-control" />
                        <label asp-for="FecIniCont" class="control-label"></label>
                        <span asp-validation-for="FecIniCont" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-group mb-3 mt-3">
                        <input asp-for="FecFinCont" type="date" class="form-control" />
                        <label asp-for="FecFinCont" class="control-label"></label>
                        <span asp-validation-for="FecFinCont" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-group input-group">
                        <input asp-for="MontoCotizado" type="text" class="form-control" />
                        <label asp-for="MontoCotizado" class="control-label"></label>
                        <span asp-validation-for="MontoCotizado" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-group mb-3 mt-3">
                        <input asp-for="MontoConseguido" type="text" class="form-control" />
                        <label asp-for="MontoConseguido" class="control-label"></label>
                        <span asp-validation-for="MontoConseguido" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-group mb-3 mt-3">
                        <textarea asp-for="ComUSer" class="form-control" placeholder="Comentarios del usuario"></textarea>
                        <label asp-for="ComUSer" class="control-label"></label>
                        <span asp-validation-for="ComUSer" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-group mb-3 mt-3">
                        <select asp-for="idEdoContrat" class="form-control" asp-items="ViewBag.EdoContra"></select>
                        <label asp-for="idEdoContrat" class="control-label"></label>
                        <span asp-validation-for="idEdoContrat" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group modal-footer">
                    <button type="submit" class="btn btn-primary btn-sm">Ingresar</button>
                    <a type="button" class="btn btn-danger btn-sm" asp-controller="Contrataciones" asp-action="Index" asp-route-Id="@ViewContext.RouteData.Values["Id"]" asp-route-r="@ViewBag.r" asp-route-i="@ViewBag.i">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">
    window.history.forward();
</script>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}