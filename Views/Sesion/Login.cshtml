@using InteliWeb2.Models.ViewModels;
@model LoginViewModel

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="~/img/img-login.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <div class="d-flex justify-content-around align-items-center mb-4">
                    <span><h3>Iniciar Sesion</h3></span>
                </div>
                <form asp-action="Login">
                    <!-- Email input -->
                    <div class="form-floating form-group mb-3 mt-3">
                        <input asp-for="LoginCorreo" type="email" class="form-control form-control-lg" />
                        <label class="form-label" asp-for="LoginCorreo"></label>
                    </div>

                    <!-- Password input -->
                    <div class="form-floating form-group mb-3 mt-3">
                        <input asp-for="LoginContraseña" type="password" class="form-control form-control-lg" />
                        <label class="form-label" asp-for="LoginContraseña"></label>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a href="#!">Forgot password?</a>
                    </div>

                    <!-- Submit button -->
                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <button type="submit" class="btn btn-primary btn-md btn-block" >Entrar</button>
                        <h6 class="text-muted">No tengo cuenta aun... <a asp-controller="Usuario" asp-action="Create" asp-route-i="@ViewBag.i" asp-route-r="@ViewBag.r">¡Registrarme!</a></h6>
                    </div>

@*                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                    </div>

                    <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!"
                       role="button">
                        <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
                    </a>
                    <a class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!"
                       role="button">
                        <i class="fab fa-twitter me-2"></i>Continue with Twitter
                    </a>
*@
                </form>
            </div>
        </div>
    </div>
</section>

